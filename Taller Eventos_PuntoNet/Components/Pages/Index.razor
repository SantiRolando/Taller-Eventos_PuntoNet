@page "/"
@using Eventos_PuntoNet.Components.Models
@using Eventos_PuntoNet.Components.Data
@using Microsoft.EntityFrameworkCore
@inject NavigationManager NavigationManager
@inject IDbContextFactory<AppDbContext> DbFactory

@rendermode InteractiveServer



    <!-- CARRUSEL DINAMICO DE EVENTOS -->

<div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">

        @if (eventosRandom.Count > 0)
        {
            @foreach (var (evento, index) in eventosRandom.Select((e, i) => (e, i)))
            {
                <div class="carousel-item @(index == 0 ? "active" : "")">
                    <img src="@ConvertirImagen(evento.Imagen!)" class="d-block w-100" alt="@evento.Nombre" />

                    <div class="carousel-caption d-none d-md-block">
                        <h1 class="titulo-hero">@evento.Nombre</h1>

                        <button class="btn btn-dark btn-lg"

                                @onclick="() => IrAEvento(evento.Id)">
                                Ver evento

                        </button>
                    </div>
                </div>
            }
        }
    </div>

    <!-- Controles -->
    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Anterior</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Siguiente</span>
    </button>
</div>


<!-- PRODUCTOS -->

<section class="productos text-center py-5">
    <h2>Ármate con equipo de alta calidad</h2>

    <div class="container mt-4">
        <div class="row justify-content-center g-4">
            <div class="col-md-3 col-10">
                <div class="card producto-card">
                    <img src="img/producto1.jpg" class="card-img-top" alt="p1" />
                    <div class="card-body">
                        <a href="#" class="btn btn-dark">Ordenar</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-10">
                <div class="card producto-card">
                    <img src="img/producto2.jpg" class="card-img-top" alt="p2" />
                    <div class="card-body">
                        <a href="#" class="btn btn-dark">Ordenar</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-10">
                <div class="card producto-card">
                    <img src="img/producto3.jpg" class="card-img-top" alt="p3" />
                    <div class="card-body">
                        <a href="#" class="btn btn-dark">Ordenar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- PATROCINADORES -->
<section class="patrocinadores text-center py-5">
    <h2>Patrocinadores</h2>

    <div class="patrocinadores-img-container mt-3">
        <img src="img/nadadores.png" class="fondo-patrocinadores" alt="Fondo_Patrocinadores" />
        <img src="img/patrons.png" class="logos-patrocinadores" alt="Patrocinadores" />
    </div>
</section>


@code {
    private List<Evento> eventosRandom = new();

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();

        eventosRandom = await context.Eventos
            .Where(e => e.Imagen != null)
            .OrderBy(e => Guid.NewGuid())
            .Take(3)
            .ToListAsync();
    }

    string ConvertirImagen(byte[] imagen)
    {
        return $"data:image/jpeg;base64,{Convert.ToBase64String(imagen)}";
    }

    private void IrAEvento(int id)
    {
        NavigationManager.NavigateTo($"/eventos/{id}/comprar");
        
    }
}
