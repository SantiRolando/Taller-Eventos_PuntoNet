@page "/usuarios/delete"
@using Microsoft.EntityFrameworkCore
@using Eventos_PuntoNet.Components.Models
@inject IDbContextFactory<Eventos_PuntoNet.Components.Data.AppDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Usuario</h2>
    <hr />
    @if (usuario is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Nombre</dt>
            <dd class="col-sm-10">@usuario.Nombre</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@usuario.Email</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Password</dt>
            <dd class="col-sm-10">@usuario.Password</dd>
        </dl>
        <EditForm method="post" Model="usuario" OnValidSubmit="DeleteUsuario" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(usuario is null)">Delete</button> |
            <a href="/usuarios">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Usuario? usuario;

    [SupplyParameterFromQuery]
    private int Ci { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        usuario = await context.Usuarios.FirstOrDefaultAsync(m => m.Ci == Ci);

        if (usuario is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteUsuario()
    {
        using var context = DbFactory.CreateDbContext();
        context.Usuarios.Remove(usuario!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/usuarios");
    }
}
